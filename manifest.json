{
    "manifest_version": 2,
    "name": "Monk Mode",
    "version": "1.0",
  
    "description": "Blocks certain websites/pages to avoid procrastination",
    "icons": {
    },
    "permissions": [
        "activeTab",
        "bookmarks",
        "unlimitedStorage"
      ],
  
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["monk-mode.js"]
      }
    ]
}
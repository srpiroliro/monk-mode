{
    "manifest_version": 2,
    "name": "Monk Mode",
    "version": "1.0",
  
    "description": "Blocks certain websites/pages to avoid procrastination",
    "icons": {
    },
    "permissions": [
        "activeTab",
        "bookmarks",
        "unlimitedStorage"
    ],

    "browser_action":{
      "default_popup": "popup.html"
    },
  
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["monk-mode.js"]
        
      }
    ]
}